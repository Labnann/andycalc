<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/equalSign"
        android:layout_width="109dp"
        android:layout_height="142dp"

        android:layout_marginStart="8dp"
        android:background="@android:color/background_dark"
        android:text="="
        android:textColor="@android:color/white"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <EditText
        android:id="@+id/editor"
        android:layout_width="197dp"
        android:layout_height="142dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/equalSign"
        app:layout_constraintEnd_toStartOf="@+id/equalSign"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/equalSign"
        app:layout_constraintTop_toTopOf="@id/equalSign"
        app:layout_constraintVertical_bias="0.947" />

    <TextView
        android:id="@+id/viewer"
        android:layout_width="314dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/equalSign"
        app:layout_constraintEnd_toEndOf="@+id/equalSign"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/editor"
        app:layout_constraintStart_toStartOf="@+id/editor"
        app:layout_constraintTop_toBottomOf="@+id/editor"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/copier"
        android:layout_width="139dp"
        android:layout_height="42dp"

        android:layout_marginStart="8dp"
        android:text="Copy"
        app:layout_constraintEnd_toEndOf="@+id/equalSign"
        app:layout_constraintStart_toStartOf="@+id/equalSign"
        app:layout_constraintTop_toTopOf="@+id/viewer" />


</androidx.constraintlayout.widget.ConstraintLayout>